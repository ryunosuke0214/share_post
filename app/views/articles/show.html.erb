<%= flash_messages %>

<div>
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @article.content %>
  </p>
  <% if @article.thumbnail.attached? %>
  <p>
    <strong>Thumbnail:</strong>
    <%= image_tag @article.thumbnail %>
  </p>
<% end %>
</div>

<div>
  <%= link_to "Back to articles", articles_path %>
</div>